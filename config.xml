<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.tkj.slidemenu" version="0.0.1">
	<name>Slide Menu</name>
	<description>Kendo Mobile Slide Menu</description>
	<author href="http://www.joemeeks.net" email="joemeeks@joemeeks.net">Joe Meeks</author>

  <icon src="images/icons/ios/icon.png" width="57" height="57" gap:platform="ios"/>
  <icon src="images/icons/ios/icon72.png" width="72" height="72" gap:platform="ios" gap:role="default"/>
  <icon src="images/icons/ios/icon@2x.png" width="114" height="114" gap:platform="ios"/>

  <feature name="http://api.phonegap.com/1.0/camera"/>
  
  <preference name="phonegap-version" value="2.5.0" />
  <preference name="orientation" value="default" />
  <preference name="target-device" value="universal" />
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="false" />
  <preference name="prerendered-icon" value="false" />
  <preference name="detect-data-types" value="true" />
  <preference name="show-splash-screen-spinner" value="true" />
  <preference name="exit-on-suspend" value="false" />
  <preference name="stay-in-webview" value="false" />
  
  <preference name="KeyboardDisplayRequiresUserAction" value="false" />

  <access origin="*" />
</widget>